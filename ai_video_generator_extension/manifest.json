{
  "manifest_version": 3,
  "name": "AI Video Side Panel",
  "version": "1.0.0",
  "description": "Inject a customizable side panel with iframe into any webpage",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Open Side Panel"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css", "panel.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
